<!DOCTYPE html>
<html lang='en'>
	<head>
		{{include(head)/}}
	</head>

	<body class='is-flex full-height'>
		<div>
			{{include(navigationBar)/}}

			{{include(header)/}}

			{{if(!options.services || !options.services.length)}}
				<section class='section'>
					<div class='container'>
						<p>No services found</p>
					</div>
				</section>
			{{#else}}
				<section class='section'>
					<div class='container content'>
						<p>On this page:</p>
						<ul>
							{{foreach(options.services)}}
								<li>
									<a href='#{{@this.title}}'>{{@this.title}}</a>
								</li>
							{{/foreach}}
							<li>
								<a href='#contact'>Get in touch</a>
							</li>
						</ul>
					</div>
				</section>

				{{foreach(options.services)}}
					<section
						id='{{@this.title}}'
						class='hero {{if(@this.isBackgroundDark)}}is-dark{{/if}}'
						style='background-color: #{{@this.backgroundColor}};'
					>
						<div class="hero-body">
							<div class="container">
								<h1 class="title is-4">{{@this.title}}</h1>
								<h2 class="subtitle is-6">{{@this.subtitle}}</h2>
							</div>
						</div>
					</section>
					<section class='section'>
						<div class='container'>
							<div class='content'>{{@this.content | safe}}</div>
						</div>
					</section>
				{{/foreach}}
			{{/if}}

			<section id='contact' class="hero is-primary is-bold is-info">
				<div class="hero-body">
					<div class="container">
						<h1 class="title is-4">Contact</h1>
						<h2 class='subtitle is-6'>
							For more information or pricing please get in touch
						</h2>
					</div>
				</div>
			</section>

			<section class='section'>
				<div class='container'>
					{{include(contactForm)/}}
				</div>
			</section>
		</div>

		{{include(footer)/}}
	</body>
</html>
