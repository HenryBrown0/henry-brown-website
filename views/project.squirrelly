<!DOCTYPE html>
<html lang='en'>

<head>
	{{include(head)/}}
	<style>
		.slide-show {
			white-space: nowrap;
			max-width: 100%;
			overflow-y: scroll;
		}
		.modal-alt {
			margin-top: 0.3rem;
		}
	</style>
</head>

<body class='is-flex full-height'>
	<div>
		{{include(navigationBar)/}}

		<section
			class='hero {{if(options.isBackgroundDark)}}is-dark{{/if}}'
			style='background-color: #{{backgroundColor}};'
		>
			<div class='hero-body'>
				<div class='container'>
					<h1 class='title is-3'>
						{{if(options.pageTitle)}}
							{{pageTitle}}
						{{#else}}
							No project found
						{{/if}}
					</h1>
					{{if(options.description)}}
						<h2 class='subtitle is-5'>{{description}}</h2>
					{{/if}}
				</div>
			</div>
		</section>

		<main class='section'>
			<div class='container'>
				<div class='columns is-multiline'>
					{{if(options.images)}}
						<div class='column is-12'>
							<div class='slide-show'>
								{{foreach(options.images)}}
									<a
										href='#{{@this.alt}}'
										onclick='openImageModal("{{@this.src}}", "{{@this.alt}}")'
										class='is-inline-block'
									>
										<div>
											<figure
												class='image is-128x128 has-background-grey-lighter'
											>
												<img
													src='{{@this.thumbnail}}'
													height='128'
													width='128'
												/>
											</figure>
										</div>
									</a>
								{{/foreach}}
							</div>
						</div>
					{{/if}}

					{{if(options.gitHubUrl)}}
						<div class='column is-12'>
							<a href='{{gitHubUrl}}' class='button' target='_blank'>
								<span class='icon is-small'>
									<span class='icon'>
										<img
											src='/icons/github-brands.svg'
											alt='GitHub'
											class='image is-16x16'
										/>
									</span>
								</span>
								<span>View on GitHub</span>
							</a>
						</div>
					{{/if}}

					{{if(options.readMe)}}
						<div class='column is-12'>
							<div class='content'>{{readMe | safe}}</div>
						</div>
					{{/if}}
				</div>
			</div>
		</main>
		<div id='image-modal' class='modal'>
			<div id='image-modal-background' class='modal-background'></div>
			<div class='modal-content'>
				<div class='image' class='modal-image'>
					<img id='image-modal-image' />
				</div>
				<div class='content has-text-centered has-text-grey-lighter modal-alt'>
					<span id='image-modal-alt'></span>
				</div>
			</div>
			<button
				id='image-modal-close-btn'
				class='modal-close is-large'
				aria-label='close'
			></button>
		</div>
	</div>
	{{include(footer)/}}
</body>

</html>
