{
  "name": "henry-brown-website",
  "version": "2.0.0",
  "description": "Personal website hosted at https://henrybrown0.com",
  "main": "dist/server.js",
  "scripts": {
    "start": "yarn watch & NODE_ENV=development nodemon dist/server.js -e .squirrelly",
    "watch": "tsc --watch & yarn watch-styles",
    "watch-styles": "parcel watch styles/* --out-dir dist/static/styles",
    "build": "tsc && yarn run build-styles",
    "build-styles": "parcel build styles/* --out-dir dist/static/styles",
    "test": "yarn test-types && yarn test-lint",
    "test-types": "tsc --noEmit",
    "test-lint": "eslint 'src/**'"
  },
  "author": "HenryBrown0",
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "@sentry/node": "5.15.2",
    "express": "^4.17.1",
    "graphql-request": "^1.8.2",
    "helmet": "^3.21.2",
    "markdown-it": "^10.0.0",
    "node-cache": "^5.1.0",
    "squirrelly": "^7.9.0",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/helmet": "^0.0.45",
    "@types/markdown-it": "^0.0.9",
    "@types/squirrelly": "^7.1.0",
    "@types/tinycolor2": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^2.0.2",
    "parcel": "^1.12.4",
    "sass": "^1.24.1",
    "typescript": "^3.7.4"
  }
}
