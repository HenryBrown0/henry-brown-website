{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"outDir": "../dist",
		"inlineSources": true
	},
	"include": [
		"../src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
